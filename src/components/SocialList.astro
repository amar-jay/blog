---
import { Icon } from "astro-icon/components";

/**
	Uses https://www.astroicon.dev/getting-started/
	Find icons via guide: https://www.astroicon.dev/guides/customization/#open-source-icon-sets
*/
const socialLinks: {
	friendlyName: string;
	isWebmention?: boolean;
	link: string;
	name: string;
}[] = [

    {
      friendlyName: "rss",
      isWebmention: true,
      link: import.meta.env.SITE + "rss.xml",
      name: "mdi:rss",
    },
	{
		friendlyName: "github",
		link: "https://www.github.com/amar-jay/",
		name: "mdi:github",
	},
	{
		friendlyName: "email",
		isWebmention: true,
		link: "mailto:abdmananjnr@gmail.com",
		name: "mdi:email",
	},
	{
		friendlyName: "instagram",
		link: "https://www.instagram.com/amanan.jay/",
		name: "mdi:instagram",
	},
	{
		friendlyName: "x",
		link: "https://twitter.com/_amarjay",
		name: "mdi:twitter",
	},
];
---

<div class="flex flex-wrap items-end gap-x-4">
	<p>Find me on</p>
	<ul class="flex flex-1 items-center gap-x-2 sm:flex-initial">
		{
			socialLinks.map(({ friendlyName, isWebmention, link, name }) => (
				<li class="flex">
					<a
						class="inline-block p-1 sm:hover:text-link"
						href={link}
						rel={`noopener noreferrer ${isWebmention ? "me authn" : ""}`}
						target="_blank"
					>
						<Icon aria-hidden="true" class="h-6 w-6" focusable="false" name={name} />
						<span class="sr-only">{friendlyName}</span>
					</a>
				</li>
			))
		}
	</ul>
</div>
